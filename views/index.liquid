{% render 'partials/head.liquid' %}

<article class="profile-card">

  <h1 class="name">{{ person.name }}</h1>

  <div class="image-container">
    <img src="Atlas-gebergte.jpg" alt="" class="main-image" id="mainImage">
  </div>

  <img src="Squad1J-Ayoub.JPG" alt="Profielfoto" class="profile">

